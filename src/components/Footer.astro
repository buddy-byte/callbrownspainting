    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-main {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  /* Footer Header */
  .footer-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #374151;
  }

  .company-branding h3 {
    color: white;
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  .company-branding .tagline {
    color: #f59e0b;
    font-weight: 600;
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  .company-branding .description {
    color: #e5e7eb;
    line-height: 1.6;
    margin-bottom: 0;
    max-width: 400px;
  }

  /* Footer Columns */
  .footer-column h4,
  .footer-column h5 {
    color: white;
    margin-bottom: 1.5rem;
    font-weight: 600;
  }

  .footer-column h4 {
    font-size: 1.25rem;
    border-bottom: 2px solid #3b82f6;
    padding-bottom: 0.5rem;
  }

  .footer-column h5 {
    font-size: 1rem;
    color: #f59e0b;
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  .tagline {
    color: #f59e0b;
    font-weight: 600;
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  .description {
    color: #e5e7eb;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

