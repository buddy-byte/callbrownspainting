  }

  .contact-item {
    margin-bottom: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .contact-item strong {
    color: #f59e0b;
    font-size: 0.875rem;
  }

  .contact-item a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .contact-item a:hover {
    color: #f59e0b;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: 0.75rem;
  }

  .footer-section a {
    color: #e5e7eb;
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }

  .footer-section a:hover {
