    color: #f59e0b;
  }

  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .footer-header {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }

