---

<footer class="footer">
  <div class="footer-content">
    <!-- Company Header -->
    <div class="footer-header">
      <div class="company-branding">
        <h3>Brown's Painting LLC</h3>
        <p class="tagline">Family-Owned. Locally Trusted.</p>
        <p class="description">
          Professional painting services across South Alabama. 
          Interior, exterior, commercial, and specialty painting 
          with 25+ years of experience.
        </p>
      </div>
      
      <div class="contact-info">
        <div class="contact-item">
          <strong>üìû Phone:</strong>
          <a href="tel:+12512374545" title="Call Brown's Painting">(251) 237-4545</a>
        </div>
        <div class="contact-item">
          <strong>üìß Email:</strong>
          <a href="mailto:hello@callbrownspainting.com" title="Email Brown's Painting">hello@callbrownspainting.com</a>
        </div>
        <div class="contact-item">
          <strong>üìç Service Area:</strong>
          <span>South Alabama</span>
        </div>
      </div>
    </div>

    <!-- 4-Column Footer Layout -->
    <div class="footer-main">
      <!-- Column 1: Services -->
      <div class="footer-column">
        <h4>Painting Services</h4>
        <ul>
          {services.map(service => (
            <li>
              <a href={service.url} title={service.description}>
                {service.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Column 2: Service Areas -->
      <div class="footer-column">
        <h4>Service Areas</h4>
        <div class="location-grid">
          {locations.map(location => (
            <div class="location-item">
              <a href={location.url} title={`Professional painting services in ${location.name}, ${location.county} County`}>
                {location.name}
              </a>
              <span class="county">{location.county} County</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Column 3: Company & Resources -->
      <div class="footer-column">
        <h4>Company & Resources</h4>
        <ul>
          {companyLinks.map(link => (
            <li>
              <a href={link.url} title={link.description}>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
        
        <div class="blog-section">
          <h5>Recent Articles</h5>
          <ul>
            {recentPosts.map(post => (
              <li>
                <a href={post.url} title={post.title}>
                  {post.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Column 4: Emergency Services -->
      <div class="footer-column emergency-column">
        <h4>Emergency Services</h4>
        <ul>
          {emergencyServices.map(service => (
            <li>
              <a href={service.url} title={service.description} class="emergency-link">
                {service.name}
              </a>
            </li>
          ))}
        </ul>
        
        <div class="emergency-contact">
          <h5>Need Immediate Help?</h5>
          <div class="emergency-cta">
            <a href="tel:+12512374545" class="btn btn-emergency">
              Call Now: (251) 237-4545
            </a>
            <p class="emergency-note">Available 7 days a week for emergency services</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Footer -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div class="copyright">
          <p>&copy; {currentYear} Brown's Painting LLC. All rights reserved.</p>
