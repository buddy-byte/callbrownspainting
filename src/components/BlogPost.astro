---
export interface Props {
  title: string;
  description: string;
  publishDate: string;
  author: string;
  readTime: string;
  featuredImage: string;
  category: string;
  tags: string[];
  content: any;
}

const { 
  title, 
  description, 
  publishDate, 
  author, 
  readTime, 
  featuredImage, 
  category, 
  tags, 
  content 
} = Astro.props;

const formattedDate = new Date(publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="blog-post">
  <!-- Article Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "{title}",
      "description": "{description}",
      "author": {
        "@type": "Person",
        "name": "{author}",
        "jobTitle": "Founder & Lead Painter",
        "worksFor": {
          "@type": "Organization",
          "name": "Browns Painting LLC",
          "url": "https://callbrownspainting.com"
        }
      },
      "publisher": {
        "@type": "Organization",
        "name": "Browns Painting LLC",
        "logo": {
          "@type": "ImageObject",
          "url": "https://callbrownspainting.com/images/logo/browns-painting-logo-hat.png"
        }
      },
      "datePublished": "{publishDate}",
      "dateModified": "{publishDate}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://callbrownspainting.com/blog/{title.toLowerCase().replace(/[^a-z0-9]+/g, '-')}"
      },
      "image": {
        "@type": "ImageObject",
        "url": "https://callbrownspainting.com{featuredImage}",
        "width": 1200,
        "height": 630
      },
      "articleSection": "{category}",
      "keywords": "{tags.join(', ')}"
    }
  </script>

  <!-- Featured Image -->
  <div class="featured-image">
    <img src={featuredImage} alt={title} />
  </div>

  <!-- Article Header -->
  <header class="article-header">
    <div class="article-meta">
      <span class="category">{category}</span>
      <span class="publish-date">{formattedDate}</span>
      <span class="read-time">{readTime} read</span>
    </div>
    <h1 class="article-title">{title}</h1>
    <p class="article-description">{description}</p>
    <div class="article-author">
      <span>By {author}</span>
    </div>
  </header>

  <!-- Article Content -->
  <div class="article-content">
    <slot />
  </div>

  <!-- Article Footer -->
  <footer class="article-footer">
    <div class="tags">
      {tags.map(tag => (
        <span class="tag">#{tag}</span>
      ))}
    </div>
    
    <div class="cta-section">
      <h3>Ready to Transform Your Home?</h3>
      <p>Get a free estimate from Browns Painting LLC and see how professional painting can enhance your property.</p>
      <div class="cta-buttons">
        <a href="/contact" class="btn btn-primary">Get Free Estimate</a>
        <a href="tel:+1251-237-4545" class="btn btn-secondary">Call (251) 237-4545</a>
      </div>
    </div>
  </footer>
</article>

