---
import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';

const title = "Professional Painters in Repton AL | Interior & Exterior Painting Services";
const description = "Expert painters in Repton, Alabama. Specializing in residential painting, commercial painting, and Conecuh County properties. Licensed, insured, and locally owned. Free estimates!";
const keywords = "painters Repton AL, residential painting Repton, commercial painting Repton, painters near me Repton, local painters Repton AL, Conecuh County painters, CallBrownsPainting.com";
---

<BaseLayout>
  <SEO 
    title={title}
    description={description}
    keywords={keywords}
  />
  
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <div class="hero-text">
          <h1>Professional Painters in Repton, Alabama</h1>
          <p class="hero-subtitle">Expert residential and commercial painting services for Repton properties. Specializing in Conecuh County homes and businesses with professional results.</p>
          <div class="hero-buttons">
            <a href="tel:+1251XXX-XXXX" class="btn btn-primary">Call (251) XXX-XXXX</a>
            <a href="/contact" class="btn btn-secondary">Get Free Estimate</a>
          </div>
        </div>
        <div class="hero-form">
          <div class="hero-form-container">
            <h3>Get Your Free Painting Quote</h3>
            <form>
              <input type="text" placeholder="Your Name" required>
              <input type="email" placeholder="Email Address" required>
              <input type="tel" placeholder="Phone Number" required>
              <select required>
                <option value="">Select Service Type</option>
                <option value="residential">Residential Painting</option>
                <option value="commercial">Commercial Painting</option>
                <option value="interior">Interior Painting</option>
                <option value="exterior">Exterior Painting</option>
              </select>
              <textarea placeholder="Project Details (optional)"></textarea>
              <button type="submit" class="btn btn-primary">Get Free Quote</button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Trust Signals -->
    <section class="trust-signals">
      <div class="container">
        <div class="trust-grid">
          <div class="trust-item">
            <div class="trust-icon">üè†</div>
            <h3>Locally Owned</h3>
            <p>Serving Repton & Conecuh County for over 25 years</p>
          </div>
          <div class="trust-item">
            <div class="trust-icon">‚≠ê</div>
            <h3>25+ Years Experience</h3>
            <p>Barry "Boomer" Brown brings decades of expertise</p>
          </div>
          <div class="trust-item">
            <div class="trust-icon">üõ°Ô∏è</div>
            <h3>Licensed & Insured</h3>
            <p>Fully licensed and insured for your protection</p>
          </div>
          <div class="trust-item">
            <div class="trust-icon">üí∞</div>
            <h3>Free Estimates</h3>
            <p>No obligation, detailed estimates for all projects</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="services-section">
      <div class="container">
        <h2>Our Painting Services in Repton</h2>
        <div class="services-grid">
          <div class="service-card">
            <h3>Residential Painting</h3>
            <p>Complete interior and exterior painting services for Repton homes. We handle everything from preparation to final cleanup.</p>
            <ul>
              <li>Interior room painting</li>
              <li>Exterior house painting</li>
              <li>Cabinet refinishing</li>
              <li>Color consultation</li>
            </ul>
            <a href="/interior-painting" class="btn btn-outline">Learn More</a>
          </div>
          <div class="service-card">
            <h3>Commercial Painting</h3>
            <p>Professional commercial painting services for Repton businesses, offices, and other commercial properties.</p>
            <ul>
              <li>Office building painting</li>
              <li>Retail space painting</li>
              <li>Church and school painting</li>
              <li>Industrial painting</li>
            </ul>
            <a href="/commercial-painting" class="btn btn-outline">Learn More</a>
          </div>
          <div class="service-card">
            <h3>Conecuh County Expertise</h3>
            <p>We understand Repton's unique needs and provide specialized services for Conecuh County properties.</p>
            <ul>
              <li>Local weather considerations</li>
              <li>Community relationships</li>
              <li>Quick response times</li>
              <li>Personalized service</li>
            </ul>
            <a href="/about" class="btn btn-outline">Learn More</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="why-choose">
      <div class="container">
        <h2>Why Choose CallBrownsPainting.com in Repton?</h2>
        <div class="why-grid">
          <div class="why-item">
            <h3>Local Knowledge</h3>
            <p>We understand Repton's unique climate and architectural styles. Our team knows the best paint products for Alabama's weather conditions.</p>
          </div>
          <div class="why-item">
            <h3>Community Focus</h3>
            <p>We're committed to serving the Repton community with quality work and fair pricing for Conecuh County residents.</p>
          </div>
          <div class="why-item">
            <h3>Commercial Experience</h3>
            <p>We have extensive experience painting commercial properties, offices, and industrial facilities in Repton.</p>
          </div>
          <div class="why-item">
            <h3>Quality Materials</h3>
            <p>We use only premium paints and materials that stand up to Alabama's challenging weather conditions.</p>
          </div>
