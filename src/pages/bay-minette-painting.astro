      </div>
    </section>

    <!-- Service Areas -->
    <section class="service-areas">
      <div class="container">
        <h2>We Serve Bay Minette & Surrounding Areas</h2>
        <div class="areas-grid">
          <div class="area-item">
            <h3>Bay Minette</h3>
            <p>Downtown, residential areas, and surrounding neighborhoods</p>
          </div>
          <div class="area-item">
