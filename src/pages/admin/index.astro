---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = "Content Management - Brown's Painting LLC";
const description = "Manage blog content, articles, and media for Brown's Painting LLC website";
---

<BaseLayout
  title={title}
  description={description}
>
  <main class="admin-dashboard">
    <div class="container">
      <header class="admin-header">
        <h1>Content Management Dashboard</h1>
        <p>Manage your website content, blog posts, and media</p>
      </header>

      <div class="admin-grid">
        <!-- Quick Actions -->
        <div class="admin-card">
          <h2>Quick Actions</h2>
          <div class="action-buttons">
            <button class="btn btn-primary" onclick="openNewPostModal()">
              üìù New Blog Post
            </button>
            <button class="btn btn-secondary" onclick="openMediaManager()">
              üñºÔ∏è Media Manager
            </button>
            <button class="btn btn-secondary" onclick="viewAnalytics()">
              üìä View Analytics
            </button>
          </div>
        </div>

        <!-- Recent Posts -->
        <div class="admin-card">
          <h2>Recent Blog Posts</h2>
          <div class="post-list">
            <div class="post-item">
              <h3>How to Choose the Right Paint Finish</h3>
              <div class="post-meta">
                <span class="status published">Published</span>
                <span class="date">Jan 15, 2024</span>
                <span class="views">1,234 views</span>
              </div>
              <div class="post-actions">
                <button class="btn-small">Edit</button>
                <button class="btn-small">View</button>
                <button class="btn-small">Share</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Content Calendar -->
        <div class="admin-card">
          <h2>Content Calendar</h2>
          <div class="calendar-preview">
            <div class="calendar-item upcoming">
              <span class="date">Jan 22</span>
              <span class="title">Exterior Painting Prep Guide</span>
              <span class="status">Ready to Publish</span>
            </div>
            <div class="calendar-item upcoming">
              <span class="date">Jan 29</span>
              <span class="title">Mold & Mildew Detection</span>
              <span class="status">In Progress</span>
            </div>
            <div class="calendar-item upcoming">
              <span class="date">Feb 5</span>
              <span class="title">Painting Mistakes to Avoid</span>
              <span class="status">Planned</span>
            </div>
          </div>
        </div>

        <!-- Analytics Summary -->
        <div class="admin-card">
          <h2>Content Performance</h2>
          <div class="stats-grid">
            <div class="stat">
              <span class="stat-number">2,456</span>
              <span class="stat-label">Monthly Blog Views</span>
            </div>
            <div class="stat">
              <span class="stat-number">12</span>
              <span class="stat-label">Published Articles</span>
            </div>
            <div class="stat">
              <span class="stat-number">8.5%</span>
              <span class="stat-label">Conversion Rate</span>
            </div>
            <div class="stat">
              <span class="stat-number">156</span>
              <span class="stat-label">Contact Forms</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- New Post Modal -->
  <div id="newPostModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Create New Blog Post</h2>
        <button class="close-btn" onclick="closeNewPostModal()">&times;</button>
      </div>
      <div class="modal-body">
        <form id="newPostForm">
          <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" id="postTitle" name="title" required>
          </div>
          
          <div class="form-group">
            <label for="postDescription">Description</label>
            <textarea id="postDescription" name="description" rows="3" required></textarea>
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label for="postCategory">Category</label>
              <select id="postCategory" name="category" required>
                <option value="Painting Guide">Painting Guide</option>
                <option value="DIY Tips">DIY Tips</option>
                <option value="Home Improvement">Home Improvement</option>
                <option value="Safety">Safety</option>
                <option value="Local News">Local News</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="postAuthor">Author</label>
              <input type="text" id="postAuthor" name="author" value="Barry \"Boomer\" Brown" required>
            </div>
          </div>
          
          <div class="form-group">
            <label for="postTags">Tags (comma-separated)</label>
            <input type="text" id="postTags" name="tags" placeholder="paint guide, DIY tips, home improvement">
          </div>
          
          <div class="form-group">
            <label for="postImage">Featured Image URL</label>
            <input type="url" id="postImage" name="featuredImage" placeholder="/images/blog/your-image.jpg">
          </div>
          
          <div class="form-group">
            <label for="postContent">Content (Markdown)</label>
            <textarea id="postContent" name="content" rows="15" placeholder="Write your blog post content here using Markdown..."></textarea>
          </div>
          
          <div class="form-actions">
            <button type="button" class="btn btn-secondary" onclick="closeNewPostModal()">Cancel</button>
            <button type="submit" class="btn btn-primary">Create Post</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .admin-dashboard {
    min-height: 100vh;
    background: #f8fafc;
    padding: 2rem 0;
  }

  .admin-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .admin-header h1 {
    color: #1e3a8a;
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .admin-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .admin-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }

  .admin-card h2 {
    color: #1e3a8a;
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
  }

  .action-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .btn-primary {
    background: #3b82f6;
    color: white;
  }

  .btn-primary:hover {
    background: #2563eb;
  }

  .btn-secondary {
    background: #6b7280;
    color: white;
  }

  .btn-secondary:hover {
    background: #4b5563;
  }

  .post-item {
    padding: 1rem 0;
    border-bottom: 1px solid #e5e7eb;
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-item h3 {
    color: #1e3a8a;
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
  }

  .post-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
    color: #6b7280;
  }

  .status {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-weight: 600;
  }

  .status.published {
    background: #d1fae5;
    color: #065f46;
  }

  .post-actions {
    display: flex;
    gap: 0.5rem;
  }

  .btn-small {
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    background: #f3f4f6;
    color: #374151;
    border: 1px solid #d1d5db;
    border-radius: 4px;
    cursor: pointer;
  }

  .btn-small:hover {
    background: #e5e7eb;
  }

  .calendar-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid #e5e7eb;
  }

  .calendar-item:last-child {
    border-bottom: none;
  }

  .calendar-item .date {
    font-weight: 600;
    color: #1e3a8a;
    min-width: 60px;
  }

  .calendar-item .title {
    flex: 1;
    color: #374151;
  }

  .calendar-item .status {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .calendar-item.upcoming .status {
    background: #fef3c7;
    color: #92400e;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .stat {
    text-align: center;
    padding: 1rem;
    background: #f8fafc;
    border-radius: 8px;
  }

  .stat-number {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: #1e3a8a;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #6b7280;
  }

  /* Modal Styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
  }

  .modal-content {
    background-color: white;
    margin: 5% auto;
    padding: 0;
    border-radius: 12px;
    width: 90%;
    max-width: 800px;
    max-height: 90vh;
    overflow-y: auto;
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .modal-header h2 {
    color: #1e3a8a;
    margin: 0;
  }

  .close-btn {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #6b7280;
  }

  .modal-body {
    padding: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #374151;
  }

  .form-group input,
  .form-group textarea,
  .form-group select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    font-size: 1rem;
  }

  .form-group input:focus,
  .form-group textarea:focus,
  .form-group select:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .admin-grid {
      grid-template-columns: 1fr;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .modal-content {
      margin: 2% auto;
      width: 95%;
    }
  }
</style>

<script>
  function openNewPostModal() {
    document.getElementById('newPostModal').style.display = 'block';
  }

  function closeNewPostModal() {
    document.getElementById('newPostModal').style.display = 'none';
  }

  function openMediaManager() {
    alert('Media Manager coming soon! For now, upload images to /public/images/blog/ and use the full path in your posts.');
  }

  function viewAnalytics() {
    alert('Analytics integration coming soon! This will show detailed performance metrics for your content.');
  }

  // Handle form submission
  document.getElementById('newPostForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const postData = {
      title: formData.get('title'),
      description: formData.get('description'),
      category: formData.get('category'),
      author: formData.get('author'),
      tags: formData.get('tags').split(',').map(tag => tag.trim()),
      featuredImage: formData.get('featuredImage'),
      content: formData.get('content')
    };

    // In a real implementation, this would save to your CMS
    alert('Post created! In a real implementation, this would save to your content management system.');
    closeNewPostModal();
    e.target.reset();
  });

  // Close modal when clicking outside
  window.onclick = function(event) {
    const modal = document.getElementById('newPostModal');
    if (event.target === modal) {
      closeNewPostModal();
    }
  }
</script>




