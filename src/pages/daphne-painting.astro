  </main>

  <style>
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    .city-hero {
      padding: 6rem 0 4rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      text-align: center;
    }

    .city-hero h1 {
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      margin-bottom: 1.5rem;
    }

    .lead {
      font-size: clamp(1.1rem, 2vw, 1.3rem);
      margin-bottom: 2rem;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }

    .cta-buttons {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .btn {
      display: inline-block;
      padding: 1rem 2rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 600;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn-primary {
      background: #ff6b35;
      color: white;
      font-weight: 700;
    }

    .btn-secondary {
      background: rgba(255, 255, 255, 0.2);
      color: white;
      border: 2px solid white;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .city-services {
      padding: 5rem 0;
    }

    .city-services h2 {
      text-align: center;
      font-size: clamp(2rem, 4vw, 2.5rem);
      margin-bottom: 3rem;
      color: #333;
    }

    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-bottom: 4rem;
    }

    .service-card {
      background: white;
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      border-left: 4px solid #667eea;
    }

    .service-card h3 {
      color: #667eea;
      margin-bottom: 1rem;
      font-size: 1.5rem;
    }

    .service-card p {
      margin-bottom: 1rem;
      line-height: 1.6;
      color: #555;
    }

    .service-card ul {
      margin: 1rem 0;
      padding-left: 1.5rem;
    }

    .service-card li {
      margin-bottom: 0.5rem;
      color: #555;
    }

    .daphne-specialties {
      background: #f8f9fa;
      padding: 3rem 2rem;
      border-radius: 1rem;
      margin-bottom: 3rem;
    }

    .daphne-specialties h2 {
      text-align: center;
      margin-bottom: 2rem;
      color: #333;
    }

    .specialties-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
    }

    .specialty-item {
      background: white;
      padding: 2rem;
      border-radius: 0.5rem;
    }

    .specialty-item h3 {
      color: #667eea;
      margin-bottom: 1rem;
    }

    .specialty-item p {
      line-height: 1.6;
      color: #555;
    }

    .daphne-areas {
      margin-bottom: 3rem;
    }

    .daphne-areas h2 {
      text-align: center;
      margin-bottom: 2rem;
      color: #333;
    }

    .daphne-areas > p {
      text-align: center;
      margin-bottom: 2rem;
      color: #555;
    }

    .areas-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
    }

    .area-group h3 {
      color: #667eea;
      margin-bottom: 1rem;
      font-size: 1.2rem;
    }

    .area-group ul {
      list-style: none;
      padding: 0;
    }

    .area-group li {
      padding: 0.5rem 0;
      color: #555;
      border-bottom: 1px solid #e0e0e0;
    }

    .area-group li:last-child {
      border-bottom: none;
    }

    .testimonial-section {
      background: white;
      padding: 3rem 2rem;
      border-radius: 1rem;
      margin-bottom: 3rem;
      text-align: center;
    }

    .testimonial-section h2 {
      margin-bottom: 2rem;
      color: #333;
    }

    .testimonial blockquote {
      font-size: 1.2rem;
      font-style: italic;
      color: #555;
      margin-bottom: 1rem;
      line-height: 1.6;
    }

    .testimonial cite {
      color: #667eea;
      font-weight: 600;
    }

    .cta-section {
      text-align: center;
      padding: 3rem 0;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 1rem;
    }

    .cta-section h2 {
      margin-bottom: 1rem;
      font-size: 2rem;
    }

    .cta-section p {
      margin-bottom: 2rem;
      font-size: 1.1rem;
      opacity: 0.95;
    }

    @media (max-width: 768px) {
      .city-hero {
        padding: 4rem 0 2rem;
      }

      .city-services {
        padding: 3rem 0;
      }

      .service-card {
        padding: 1.5rem;
      }

      .daphne-specialties {
        padding: 2rem 1rem;
      }
    }
  </style>
</BaseLayout>

