---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

// Sort by publish date (newest first)
const sortedPosts = blogPosts.sort((a, b) => 
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);

const title = "Painting Tips & Guides - Brown's Painting LLC Blog";
const description = "Expert painting advice, DIY guides, and home improvement tips from professional painters in South Alabama. Learn about paint finishes, color selection, and more.";
const keywords = "painting tips, DIY painting, home improvement blog, paint guides, Alabama painting advice, house painting tips";
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
>
  <main class="blog-index">
    <div class="container">
      <!-- Hero Section -->
      <section class="blog-hero">
        <h1>Painting Tips & Expert Guides</h1>
        <p>Professional painting advice, DIY guides, and home improvement tips from South Alabama's trusted painting experts.</p>
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">{sortedPosts.length}</span>
            <span class="stat-label">Expert Articles</span>
          </div>
          <div class="stat">
            <span class="stat-number">25+</span>
            <span class="stat-label">Years Experience</span>
          </div>
          <div class="stat">
            <span class="stat-number">500+</span>
            <span class="stat-label">Happy Customers</span>
          </div>
        </div>
      </section>

      <!-- Featured Post -->
      {sortedPosts.length > 0 && (
        <section class="featured-post">
          <h2>Featured Article</h2>
          <article class="featured-article">
            <div class="featured-image">
              <img src={sortedPosts[0].data.featuredImage} alt={sortedPosts[0].data.title} />
            </div>
            <div class="featured-content">
              <div class="article-meta">
                <span class="category">{sortedPosts[0].data.category}</span>
                <span class="publish-date">
                  {new Date(sortedPosts[0].data.publishDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </span>
                <span class="read-time">{sortedPosts[0].data.readTime} min read</span>
              </div>
              <h3><a href={`/blog/${sortedPosts[0].slug}`}>{sortedPosts[0].data.title}</a></h3>
              <p>{sortedPosts[0].data.description}</p>
              <div class="article-tags">
                {sortedPosts[0].data.tags.map(tag => (
                  <span class="tag">#{tag}</span>
                ))}
              </div>
              <a href={`/blog/${sortedPosts[0].slug}`} class="btn btn-primary">Read Article</a>
            </div>
          </article>
        </section>
      )}

      <!-- All Posts -->
      <section class="all-posts">
        <h2>All Articles</h2>
        <div class="posts-grid">
          {sortedPosts.map((post) => (
            <article class="post-card">
              <div class="post-image">
                <img src={post.data.featuredImage} alt={post.data.title} />
              </div>
              <div class="post-content">
                <div class="post-meta">
                  <span class="category">{post.data.category}</span>
                  <span class="publish-date">
                    {new Date(post.data.publishDate).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </span>
                </div>
                <h3><a href={`/blog/${post.slug}`}>{post.data.title}</a></h3>
                <p>{post.data.description}</p>
                <div class="post-footer">
                  <div class="post-tags">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <span class="tag">#{tag}</span>
                    ))}
                  </div>
                  <a href={`/blog/${post.slug}`} class="read-more">Read More â†’</a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </section>

      <!-- CTA Section -->
      <section class="blog-cta">
        <h2>Need Professional Painting Services?</h2>
        <p>Our expert team is ready to help with your next painting project. Get a free estimate today!</p>
        <div class="cta-buttons">
          <a href="/contact" class="btn btn-primary">Get Free Estimate</a>
          <a href="tel:+1251-237-4545" class="btn btn-secondary">Call (251) 237-4545</a>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
