    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: #f59e0b;
    color: white;
  }

  .btn-primary:hover {
    background: #d97706;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border-color: white;
  }

  .btn-secondary:hover {
    background: white;
    color: #1e3a8a;
  }

  @media (max-width: 768px) {
    .blog-hero h1 {
      font-size: 2rem;
    }

    .hero-stats {
      flex-direction: column;
      gap: 1rem;
    }

    .featured-article {
      grid-template-columns: 1fr;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
