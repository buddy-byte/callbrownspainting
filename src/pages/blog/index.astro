    color: #4b5563;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    background: #f3f4f6;
    color: #374151;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
  }

  .all-posts h2 {
    color: #1e3a8a;
    font-size: 2rem;
    margin-bottom: 2rem;
  }

