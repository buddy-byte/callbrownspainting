  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .service-card h3 {
    color: #1e40af;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .service-card p {
    margin-bottom: 1rem;
    line-height: 1.7;
    color: #4b5563;
  }

  .service-card ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .service-card li {
    margin-bottom: 0.5rem;
    color: #6b7280;
    line-height: 1.6;
  }

  .faq-container {
    display: grid;
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .faq-item {
    background: #f8fafc;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    border-left: 4px solid #3b82f6;
    transition: transform 0.3s ease;
  }

  .faq-item:hover {
    transform: translateX(4px);
  }

  .faq-item h3 {
    color: #1e40af;
    margin-bottom: 1rem;
    font-size: 1.25rem;
    font-weight: 700;
  }

  .faq-item p {
    line-height: 1.7;
    color: #4b5563;
    margin: 0;
  }

  .cta-section {
    text-align: center;
    padding: 5rem 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .cta-section h2 {
    margin-bottom: 1rem;
    font-size: 2.5rem;
    font-weight: 800;
  }

  .cta-section p {
    margin-bottom: 2rem;
    font-size: 1.125rem;
    opacity: 0.95;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero {
      height: 70vh;
      min-height: 500px;
    }

    .hero-logo-image {
      height: 200px;
    }

    .hero h1 {
      font-size: 2rem;
      margin-top: -2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .hero-trust-badges {
      top: 1rem;
      gap: 0.75rem;
      padding: 0 1rem;
    }

    .trust-badge {
      padding: 0.63rem 1.25rem;
      font-size: 1rem;
    }

    .trust-badge .trust-icon,
    .trust-badge .trust-stars {
      font-size: 1.25rem;
    }

    .trust-badge .trust-text {
      font-size: 0.94rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .btn {
      padding: 1rem 1.5rem;
      font-size: 1rem;
    }

    .services-section,
    .faq-section {
      padding: 3rem 0;
    }

    .cta-section {
      padding: 3rem 1.5rem;
    }
  }
</style>

<script>
  // Hero Slider Functionality
  document.addEventListener('DOMContentLoaded', function() {
    const slides = document.querySelectorAll('.hero-slide');
    const dots = document.querySelectorAll('.dot');
    let currentSlide = 0;
    let slideInterval;

    function showSlide(index) {
      slides.forEach(slide => slide.classList.remove('active'));
      dots.forEach(dot => dot.classList.remove('active'));
      slides[index].classList.add('active');
      dots[index].classList.add('active');
      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }

    function startSlider() {
      slideInterval = setInterval(nextSlide, 5000);
    }

    function stopSlider() {
      clearInterval(slideInterval);
    }

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        stopSlider();
        startSlider();
      });
    });

    startSlider();

    const hero = document.querySelector('.hero');
    hero.addEventListener('mouseenter', stopSlider);
    hero.addEventListener('mouseleave', startSlider);
  });
</script>
