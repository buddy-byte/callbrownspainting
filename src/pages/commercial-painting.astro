---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServiceSchema from '../components/ServiceSchema.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import RelatedServices from '../components/RelatedServices.astro';
import ServiceContentFramework from '../components/ServiceContentFramework.astro';
---

<BaseLayout
  title="Commercial Painting Services - CallBrownsPainting.com"
  description="Commercial painting specialists: churches, schools, gymnasiums, office buildings. Minimal disruption scheduling, high-traffic areas, commercial-grade finishes. Serving Mobile, Baldwin, and Escambia counties."
  keywords="commercial painting Brewton AL, church painting Atmore AL, school painting Fairhope AL, gymnasium painting Daphne AL, office building painting Spanish Fort AL, restaurant painting Foley AL"
>
  <main>
    <!-- Breadcrumbs -->
    <Breadcrumbs items={[
      { name: 'Services', url: '/services' },
      { name: 'Commercial Painting', url: '/commercial-painting', current: true }
    ]} />
    
    <!-- Service Schema -->
    <ServiceSchema 
      serviceName="Commercial Painting Services"
      serviceDescription="Professional commercial painting services for businesses, churches, schools, and institutions throughout South Alabama. Specializing in minimal disruption scheduling, high-traffic areas, and commercial-grade finishes."
      serviceUrl="https://callbrownspainting.com/commercial-painting"
      serviceType="Commercial Painting"
      priceRange="$$"
      serviceImage="https://callbrownspainting.com/assets/commercial-painting-service.jpg"
    />

    <!-- Service Content Framework -->
    <ServiceContentFramework
      serviceName="Commercial Painting"
      serviceType="commercial"
      heroTitle="Professional Commercial Painting Services"
      heroSubtitle="Complete commercial painting solutions for businesses, churches, schools, and institutions throughout South Alabama. We work around your schedule to minimize disruption while delivering professional results."
      valueProposition="With 25+ years of experience in commercial painting, we understand the unique challenges of painting businesses, churches, schools, and institutions. Our flexible scheduling, commercial-grade materials, and professional techniques ensure minimal disruption to your operations while delivering exceptional results that enhance your property's value and appearance."
      whatsIncluded={[
        {
          title: "Flexible Scheduling",
          description: "We work around your business hours, including evenings and weekends, to minimize disruption to your operations.",
          icon: "⏰"
        },
        {
          title: "Commercial-Grade Materials",
          description: "High-quality paints and finishes designed for high-traffic areas and commercial environments.",
          icon: "🏢"
        },
        {
          title: "Church & School Specialists",
          description: "Expert knowledge of painting requirements for religious and educational facilities.",
          icon: "⛪"
        },
        {
          title: "Gymnasium & Sports Facilities",
          description: "Specialized painting for gymnasiums, locker rooms, and sports facilities with durable finishes.",
          icon: "🏟️"
        },
        {
          title: "Office Building Painting",
          description: "Professional interior and exterior painting for office buildings and corporate facilities.",
          icon: "🏢"
        },
        {
          title: "Restaurant & Retail",
          description: "Commercial painting for restaurants, retail stores, and hospitality businesses.",
          icon: "🍽️"
        }
      ]}
      processSteps={[
        {
          step: 1,
          title: "Free Consultation & Assessment",
          description: "We visit your facility to assess the project scope, discuss your requirements, and provide a detailed written estimate with timeline.",
          duration: "45-60 minutes"
        },
        {
          step: 2,
          title: "Schedule Coordination",
          description: "We work with your team to create a painting schedule that minimizes disruption to your business operations.",
          duration: "1-2 days"
        },
        {
          step: 3,
          title: "Site Preparation & Protection",
          description: "We protect all furniture, equipment, and areas not being painted, and set up work zones to maintain safety.",
          duration: "1-2 days"
        },
        {
          step: 4,
          title: "Surface Preparation",
          description: "We thoroughly prepare all surfaces including cleaning, sanding, and priming to ensure optimal paint adhesion.",
          duration: "1-3 days"
        },
        {
          step: 5,
          title: "Professional Painting",
          description: "Our skilled painters apply commercial-grade paints using professional techniques for consistent, durable results.",
          duration: "2-7 days"
        },
        {
          step: 6,
          title: "Quality Inspection & Cleanup",
          description: "We conduct a thorough quality inspection with your team, then clean up completely and remove all protection materials.",
          duration: "1-2 hours"
        }
      ]}
      commonIssues={[
        {
          problem: "Business Disruption During Painting",
          solution: "We offer flexible scheduling including evenings, weekends, and phased approaches to minimize disruption to your operations.",
          urgency: "high"
        },
        {
          problem: "High-Traffic Area Wear",
          solution: "We use commercial-grade paints and finishes specifically designed for high-traffic areas and frequent cleaning.",
          urgency: "high"
        },
        {
          problem: "Inconsistent Color Matching",
          solution: "We use professional color matching techniques and maintain detailed records for future touch-ups and maintenance.",
          urgency: "medium"
        },
        {
          problem: "Safety Compliance Issues",
          solution: "We follow all safety protocols and regulations for commercial painting, including proper ventilation and containment.",
          urgency: "high"
        },
        {
          problem: "Paint Failure in Humid Conditions",
          solution: "We use moisture-resistant primers and paints specifically designed for Alabama's high humidity climate.",
          urgency: "medium"
        },
        {
          problem: "Long-Term Maintenance Planning",
          solution: "We provide detailed maintenance schedules and recommendations to extend the life of your commercial paint job.",
          urgency: "low"
        }
      ]}
      customerPromise={{
        title: "Our 100% Risk-Free Quality Guarantee",
